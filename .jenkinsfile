pipeline {
    agent any
    environment {
        JAVA_HOME = '/usr/bin/java'        // Defina o caminho correto do JDK
        M2_HOME = '/usr/bin/mvn'         // Defina o caminho do Maven (se necess√°rio)
        PATH = "$M2_HOME/bin:$JAVA_HOME/bin:$PATH"  // Adiciona Maven e Java ao PATH
    }
    stages {

        stage('Build') {
            steps {
                sh 'echo "Building..."'
                sh 'mvn clean install'
            }
        }

        stage('Package') {
            steps {
                sh 'echo "Packaging..."'
                sh 'mvn package'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'echo "Running Unit Tests..."'
                sh 'mvn test'
            }
        }

    }
}



