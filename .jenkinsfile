pipeline {
    agent any
    tools {
        maven 'Maven' // Nome da configuração do Maven nas Ferramentas Globais do Jenkins
        sonarQube 'SonarQube' // Nome do SonarQube Scanner configurado nas Ferramentas Globais
    }
    environment {
        SONARQUBE_SERVER = 'SonarQubeServer' // Nome do servidor SonarQube configurado em Jenkins
    }
    stages {

        stage('Build') {
            steps {
                sh 'echo "Building..."'
                sh 'mvn clean install'
            }
        }

        stage('Package') {
            steps {
                sh 'echo "Packaging..."'
                sh 'mvn package'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'echo "Running Unit Tests..."'
                sh 'mvn test'
            }
        }

        stage('Static Code Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQubeServer') {
                        sh 'echo "Running SonarQube analysis..."'
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Mutation Testing') {
            steps {
                sh 'echo "Running Mutation Tests..."'
                sh 'mvn org.pitest:pitest-maven:mutationCoverage'
            }
        }
    }
}
